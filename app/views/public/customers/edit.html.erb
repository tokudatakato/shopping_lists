<h5>編集画面</h5>
<%= form_with model: @customer, url: customers_path(@customer), method: :patch do |f| %>

  <%= f.label :"profile_image" %>
  <%= f.file_field :icon_image, accept: "image/*" %>

  <%= f.label :"nickname" %>
  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %><br>

  <%= f.label :"profile" %>
  <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %><br>

  <%= f.label :"email" %>
  <%= f.text_field :email, autofocus: true, autocomplete: "email" %><br>
  
  <%= f.submit '変更を保存', class:'btn btn-sm px-4 w-25', style:"background-color: #F3F1EA"  %>
<% end %>
