    <%= link_to "登録情報を編集する", edit_customer_path(@customer) %>
<% end %>

<% @recipes.each do |recipe| %>
    <% if recipe.images.attached? %>
        <% recipe.images.each do |image| %>
            <%= image_tag image.variant(resize: '80x80') %>
        <% end %>
    <% end %>
    <%= link_to recipe_path(recipe) do %>
        <%= recipe.title %>
    <% end %>
<% end %>
    
