<h5>商品詳細</h5>

<div class="text-center">
  <% if @item.item_image.attached? %>
    <%= image_tag @item.item_image, size:"120x120" %>
  <% else %>
    <%= image_tag 'no_image', size: "120x120" %>
  <% end %><br>
  
  <table class="mx-auto mb-3">
    <tr class="align-center">
      <td class="pr-3">商品名</td> 
      <td><%= @item.item_name %></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3">価格</td> 
      <td>￥<%= @item.price %></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3">説明文</td> 
      <td><div class="new-line"><%= @item.description %></div></td>
    </tr>
  </table>

  <%= form_with model: @list_item, local:true do |f| %>
    <!--カート選択-->
    <%= f.collection_select :list_id, List.all, :id, :list_name, class: "form-control", include_blank: "選択して下さい"   %> 
    <%= f.hidden_field :item_id, :value => @item.id %>
    <span class="ml-3"><%= f.submit "リストに追加する", class:'mt-3 btn-primary' %></span>
  <% end %>
</div>