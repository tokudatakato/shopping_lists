<h5>レシピ投稿</h5>
<%= form_with model: @recipe, url:recipes_path, local:true do |f| %>
    <div class="col-sm-10">
        <%= f.file_field :images, accept: "image/*", class: "custom-file-input", multiple: true %>
        <label class="custom-file-label" data-browse="参照">ファイル選択...</label>
    </div>
    
    <label class="col-sm-2 col-form-label">タイトル</label>
    <div class="col-lg-4">
        <%= f.text_field :title, class: "form-control"%>
    </div>
    
    <label class="col-sm-2 col-form-label">本文</label>
    <div class="col-lg-4">
        <%= f.text_area :body, class: "form-control" %>
    </div>
    
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    
    <div class="actions">
     <%= f.submit '投稿する', class:'btn btn-sm px-4 w-25', style:"background-color: #F3F1EA" %>
   　</div>
    <% end %>