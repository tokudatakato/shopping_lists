<div class="text-center">
  <% if @item.item_image.attached? %>
    <%= image_tag @item.item_image, size:"120x120" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "120x120" %>
  <% end %><br>
  
  <table class="mx-auto mb-3 mt-3">
    <tr class="align-center">
      <td class="pr-3 pb-2">商品名</td> 
      <td class="pb-2"><%= @item.item_name %></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3 pb-2">価格</td> 
      <td class="pb-2">￥<%= @item.price %></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3 pb-2">説明文</td> 
      <td class="pb-2"><div class="new-line"><%= @item.description %></div></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3 pb-2">カテゴリー名</td> 
      <td class="pb-2"><%= @item.category.category_name %></td>
    </tr>
    <tr class="align-center">
      <td class="pr-3 pb-2">在庫ステータス</td> 
      <td class="pb-2">
        <% if @item.is_stock == true %>
          在庫あり
        <% else %>
          在庫なし
        <% end %>
      </td>
    </tr>
  </table>
  
  <%= link_to "商品編集", edit_admin_item_path(@item), class:'btn btn-sm btn-success' %>
  
</div>