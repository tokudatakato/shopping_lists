<h5>商品一覧</h5>

<table class="table table-hover ml-auto mr-auto w-75">
    <thead class="border-bottom border-top border-secondary" style="background-color: ghostwhite">
     <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>カテゴリー</th>
      <th>在庫ステータス</th>
     </tr>
    </thead>
    <tbody class="border-bottom border-secondary font-weight-bold">
     <% @items.each do |item| %>
     <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><!--%= item.category.category_name %>--></td>
      <td><% if item.is_stock %>
             <span class="text-success">在庫あり</span>
          <% else item.is_stock %>
             <span class="text-secondary">在庫なし</span>
          <% end %>
      </td>
     </tr>
     <% end %>
    </tbody>
   </table>